
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
            <h3>Join tinder 2 now!</h3>
        </div>

        <div class="well">
            <form name="form" ng-submit="register()">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" ng-model="user.name" required class="form-control" placeholder="Name"/></label>
                </div>
                <div class="form-group">
                    <label>Lastname</label>
                    <input type="text" ng-model="user.lastname" required class="form-control" placeholder="Lastname"/></label>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" ng-model="user.email" required class="form-control" placeholder="Email"/></label>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" ng-model="user.password" required class="form-control" placeholder="Password"/></label>
                </div>

                <div class="form-group">
                    <label>Confirm password</label>
                    <input type="password" ng-model="user.password_confirmation" required class="form-control" placeholder="confirm password"/></label>
                </div>

                <div class="form-group">
                    <label>Birth date</label>
                    <input type="text" ng-model="user.birth" required class="form-control" placeholder="Birth date"/></label>
                </div>

                <div class="form-group">
                    <label>Sex</label>
                    <select ng-model="user.sex" required class="form-control" placeholder="Sex">
                        <option value="0">Female</option>
                        <option value="1">Male</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Interested</label>
                    <select ng-model="user.interested" required class="form-control" placeholder="Interested">
                        <option value="0">Female</option>
                        <option value="1">Male</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Join Tinder 2</button>
            </form>
        </div>

        <div class="text-center">
            <a class="btn btn-primary " href="/login">Login</a>
        </div>

    </div>
</div>





