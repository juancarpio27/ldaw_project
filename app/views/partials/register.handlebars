
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Únete a Tinder 2</h1>
        <div class="well">
            <form name="form" ng-submit="register()">
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" ng-model="user.name" required class="form-control" placeholder="Nombre"/></label>
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" ng-model="user.lastname" required class="form-control" placeholder="Apellido"/></label>
                </div>

                <div class="form-group">
                    <label>Correo electrónico</label>
                    <input type="text" ng-model="user.email" required class="form-control" placeholder="Correo electrónico"/></label>
                </div>

                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" ng-model="user.password" required class="form-control" placeholder="Contraseña"/></label>
                </div>

                <div class="form-group">
                    <label>Confirmar contraseña</label>
                    <input type="password" ng-model="user.password_confirmation" required class="form-control" placeholder="Confirmar contraseña"/></label>
                </div>

                <div class="form-group">
                    <label>Fecha de nacimiento</label>
                    <input type="text" ng-model="user.birth" required class="form-control" placeholder="Fecha de nacimiento"/></label>
                </div>

                <div class="form-group">
                    <label>Sexo</label>
                    <select ng-model="user.sex" class="form-control" placeholder="Sexo">
                        <option value="0">Femenino</option>
                        <option value="1">Masculino</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Interes</label>
                    <select ng-model="user.interested" class="form-control" placeholder="Interes">
                        <option value="0">Femenino</option>
                        <option value="1">Masculino</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
        </div>
        <a href="/login">Inicia sesion</a>
    </div>
</div>





