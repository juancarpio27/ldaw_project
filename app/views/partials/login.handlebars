<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Inicia sesión</h1>
        <div class="well">
            <form name="form" ng-submit="send_login()">
                <div class="form-group">
                    <label>Correo electrónico</label>
                    <input type="text" ng-model="user.email" required class="form-control" placeholder="Correo elctrónico"/></label>
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" ng-model="user.password" class="form-control" required placeholder="Contraseña"/></label>
                </div>
                <button type="submit" class="btn btn-primary">Iniciar sesión</button>
            </form>
        </div>

        <p>Login or Register with:</p>

        <button class="btn btn-primary" ng-click="loginFacebook()"><span class="fa fa-facebook"></span> Facebook</button>

        <a href="/register">Registrar</a><br>
    </div>
</div>




