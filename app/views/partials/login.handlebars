<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center">Enter to your Tinder 2 profile</h3>

        <div ng-show="error_login" class="text-center alert alert-danger">
            <h5>Error when trying to login</h5>
        </div>


        <div class="well">
            <form name="form" ng-submit="send_login()">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" ng-model="user.email" required class="form-control" placeholder="Email"/></label>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" ng-model="user.password" class="form-control" required placeholder="Password"/></label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <div class="text-center">
            <p>Login or Register with:</p>
            <a href="/auth/facebook" target="_self" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a><br><br>
            <a href="/register", class="btn btn-info">Registrar</a>
        </div>

    </div>
</div>




